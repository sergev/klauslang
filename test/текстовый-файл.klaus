программа ТекстовыйФайл;

используются Файлы;

переменные
    ф: объект;
    с: символ;
    ст: строка;
    ц: целое;
    д: дробное;
    м1, м2: момент;
    л: логическое;
начало
    если не файлЕсть("тест.txt") то ф := файлСоздать(фтТекст, "тест.txt", фcдЧтение)
    иначе ф := файлОткрыть(фтТекст, "тест.txt", фрдЧтение | фрдЗапись | фcдЧтение);
    начало
        файлПоз(ф, 0, фпОтКонца);
        файлЗаписать(ф, 'A', "ABC", НС, -1, ' ', максДробное, ' ', сейчас(), ' ', да, ' ', ф);
        файлПоз(ф, 0);
        файлПрочесть(ф, с, ст, ц, д, м1, м2);
        вывести(с, НС, ст, НС, ц, НС, д, НС, м1, НС, м2, НС, л, НС);
    напоследок
        уничтожить(ф);
    конец;
окончание.
