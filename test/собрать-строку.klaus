программа СобратьСтроку;

    процедура прибавить(вв стр1: строка; стр2: строка);
    начало
        стр1 := стр1 ++ стр2;
    окончание;

переменная
    с: строка;
    м: момент;
    к, л, поз: целое;
начало
    м := сейчас();
    для к от 0 до 100000 цикл начало
        с := "";
        для л от 0 до 49 цикл с := с ++ "АБ";
    окончание;
    вывести(с, НС);
    м := сейчас() - дробное(м);
    вывести("Конкатенация: ", дробное(м)*86400, НС, НС);

    м := сейчас();
    для к от 0 до 100000 цикл начало
        с := "";
        для л от 0 до 49 цикл прибавить(с, "АБ");
    окончание;
    вывести(с, НС);
    м := сейчас() - дробное(м);
    вывести("Прибавить: ", дробное(м)*86400, НС, НС);

    м := сейчас();
    для к от 0 до 100000 цикл начало
        с := "";
        для л от 0 до 49 цикл добавить(с, "АБ");
    окончание;
    вывести(с, НС);
    м := сейчас() - дробное(м);
    вывести("Добавить: ", дробное(м)*86400, НС, НС);

    м := сейчас();
    с := "";
    длина(с, 200);
    для к от 0 до 100000 цикл начало
        поз := 0;
        для л от 0 до 49 цикл начало
            вписать(с, поз, "АБ");
            поз += 4;
        окончание;
    окончание;
    вывести(с, НС);
    м := сейчас() - дробное(м);
    вывести("Вписать: ", дробное(м)*86400, НС, НС);
окончание.
