программа ТестФайлы;

используются Файлы;

переменная
    кат, файл: строка;
начало
    кат := файлВрмКат(да);
    вывести(кат, НС);
    кат := файлВрмКат(нет);
    вывести(кат, НС);
    файл := файлВрмИмя(да, "");
    вывести(файл, НС);
    файл := файлВрмИмя(нет, "");
    вывести(файл, НС);
    вывести(файлЕсть(файл), НС);
    вывести(файлЕстьКат(кат), НС);
    вывести(файлПолныйПуть(""), НС);
    вывести(файлПолныйПуть("documents"), НС);
    вывести(файлПолныйПуть("~/documents"), НС);
    вывести(файлПолныйПуть("мой.файл"), НС);
    вывести(файлПолныйПуть("~/мой.файл"), НС);
    вывести(файлВыполняемый(), НС);
    вывести(файлДомКат(), НС);
    кат := "klaus-test-directory.dir";
    если файлЕстьКат(кат) то начало
        файлУдалКат(кат);
        вывести("Удалён каталог: ", кат, НС);
    конец иначе начало
        файлСоздКат(кат);
        вывести("Создан каталог: ", кат, НС);
        файлПереместить(кат++"/", "klaus-test-directory");
    конец;
    вывести(файлТекКат("klaus-test-directory"), НС);
    вывести(файлТекКат("../klauscon/x86_64-linux"));
    //вывести(файлАтрибуты("тест.дв"), НС);
    //вывести(файлВозраст("тест.дв"), НС);
окончание.
