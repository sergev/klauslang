программа Пример;
переменная
    имя: строка;
начало
    вывести("Введите имя: ");
    ввести(имя);
    выбор имя из
        "Петя": вывести("Узнаю брата Петю!");
        "Вася": вывести("Узнаю брата Васю!");
        "Коля": вывести("Узнаю брата Колю!");
        "Оля", "Даша", "Вика": вывести("Узнаю сестрёнку!");
        "Таня": вывести("Привет, Таня :)");
        иначе вывести("Что-то не узнаю...");
    конец;
окончание.
