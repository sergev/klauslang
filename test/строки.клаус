программа Строки;
переменная
    с, сс, пс: строка;
    поз, кво, всего: целое = 0;
начало
    с := "0123АБВГ0123абвг0123" ++ симв("АБ") ++ симв("АБ", 2);
    след(с, 0, максЦелое, кво);
    вывести("В строке ", пред(с, максЦелое, 0), " байт и ", кво, " символов", НС);
    пред(с, максЦелое, максЦелое, кво);
    вывести("В строке ", пред(с, максЦелое, 0), " байт и ", кво, " символов", НС);
    вывести(НС);
    цикл начало
        поз := след(с, поз, 3, кво);
        сс := часть(с, 0, поз);
        всего += кво;
        вывести(всего, " симв: ", сс, НС);
    окончание пока поз < длина(с);
    вывести(НС);
    всего := 0;
    поз := максЦелое;
    цикл начало
        поз := пред(с, поз, 3, кво);
        всего += кво;
        сс := часть(с, поз);
        вывести(всего, " симв: ", сс, НС);
    окончание пока поз > 0;
    вывести(НС);
    удалить(с, 28, максЦелое);
    вывести(с, НС);
    с := "1234АБВГ";
    пс := "0000";
    вписать(с, 2, пс);
    вписать(с, максЦелое, пс, 0, 2);
    //вписать(с, 7, пс);
    //вписать(с, 6, пс, 0, 3);
    вывести(с, НС);
    вывести(загл("Иванов Иван Иванович"), НС);
    вывести(строч("Иванов Иван Иванович"), НС);
окончание.
