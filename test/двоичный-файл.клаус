программа ДвоичныйФайл;

используются Файлы;

переменные
    ф: объект;
    с: символ;
    ст: строка;
    ц: целое;
    д: дробное;
    м: момент;
    л: логическое;
    
начало
    ф := файлСоздать(фтДвоичный, "тест.дв", фcдЧтение);
    начало
        файлЗаписать(ф, 'A', "ABC", -1, максДробное, сейчас(), да, ф);
        файлПоз(ф, 0);
        файлПрочесть(ф, с, ст, ц, д, м, л);
        вывести(с, НС, ст, НС, ц, НС, д, НС, м, НС, л, НС);
    напоследок
        файлЗакрыть(ф);
    конец;
окончание.
