программа Файлы;
переменная
    кат, файл: строка;
начало
    кат := файлВрмКат(да);
    вывести(кат, НС);
    кат := файлВрмКат(нет);
    вывести(кат, НС);
    файл := файлВрмИмя(да, "");
    вывести(файл, НС);
    файл := файлВрмИмя(нет, "");
    вывести(файл, НС);
    вывести(файлЕсть(файл), НС);
    вывести(файлЕстьКат(кат), НС);
    вывести(файлПолныйПуть(""), НС);
    вывести(файлПолныйПуть("documents"), НС);
    вывести(файлПолныйПуть("~/documents"), НС);
    вывести(файлПолныйПуть("мой.файл"), НС);
    вывести(файлПолныйПуть("~/мой.файл"), НС);
    вывести(файлВыполняемый(), НС);
    вывести(файлДомКат(), НС);
    вывести(файлАтрибуты("тест.дв"), НС);
    вывести(файлВозраст("тест.дв"), НС);
окончание.
