программа Фмт;
переменная
    стр: строка;
    мц: массив целых;
    мс: массив строк;
начало
    стр := формат("Меня зовут %s %s. Мне %i лет.", "Петя", "Иванов", 15);
    вывести(стр, НС);
    стр := формат("[%i]", 10);
    вывести(стр, НС);
    стр := формат("[%%]", 10);
    вывести(стр, НС);
    стр := формат("[%10i]", 10);
    вывести(стр, НС);
    стр := формат("[%.4i]", -10);
    вывести(стр, НС);
    стр := формат("[%10.4ц]", -10);
    вывести(стр, НС);
    стр := формат("[%0:-10i]", 10);
    вывести(стр, НС);
    стр := формат("[%x]", 1234567);
    вывести(стр, НС);
    стр := формат("[%x]", -1234567);
    вывести(стр, НС);
    стр := формат("[%0:10x]", 'Ё');
    вывести(стр, НС);
    стр := формат("[%0:10.4Ш]", 'Ё');
    вывести(стр, НС);
    стр := формат("[%12.4e]", -1.234);
    вывести(стр, НС);
    стр := формат("[%12.4f]", -1.234);
    вывести(стр, НС);
    стр := формат("[%g]", 1.234);
    вывести(стр, НС);
    стр := формат("[%12g]", -1.234);
    вывести(стр, НС);
    стр := формат("[%0:-12.4G]", 1.234);
    вывести(стр, НС);
    стр := формат("[%14d]", момент(44567.123));
    вывести(стр, НС);
    стр := формат("[%-14д]", момент(44567.123));
    вывести(стр, НС);
    стр := формат("[%14t]", момент(44567.123));
    вывести(стр, НС);
    стр := формат("[%-14в]", момент(44567.123));
    вывести(стр, НС);
    стр := формат("[%s]", "Привет!");
    вывести(стр, НС);
    стр := формат("[%14с]", "Привет!");
    вывести(стр, НС);
    стр := формат("[%-14с]", "Привет!");
    вывести(стр, НС);
    длина(мс, 3);
    мс[0] := "Петя";
    мс[1] := "Коля";
    мс[2] := "Юля";
    длина(мц, 3);
    мц[0] := 12;
    мц[1] := 13;
    мц[2] := 14;
    стр := формат("Меня зовут %с, %с, %с, %с. Мне %ц, %ц, %ц, %ц, %ц лет.%с", "Вася", мс, 10, мц, 15, НС);
    вывести(стр);
окончание.
