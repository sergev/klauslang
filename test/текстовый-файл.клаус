программа ТекстовыйФайл;
переменные
    ф: объект;
    с: символ;
    ст: строка;
    ц: целое;
    д: дробное;
    м1, м2: момент;
    л: логическое;
начало
    ф := файлСоздать(фтТекст, "/home/czaerlag/тест.txt", фcдЧтение);
    начало
        файлЗаписать(ф, 'A', "ABC", НС, -1, ' ', максДробное/10, ' ', сейчас(), ' ', да, ' ', ф);
        файлПоз(ф, 0);
        файлПрочесть(ф, с, ст, ц, д, м1, м2, л);
    напоследок
        файлЗакрыть(ф);
    конец;
окончание.
