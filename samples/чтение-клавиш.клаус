программа ОбработкаКлавиш;
переменная
    с: строка;
    симв: символ;
начало
    терминал(1, да);
    очиститьЭкран();
    вывести("В отладчике отключите ""Перехватывать клавиатуру"" в меню ""Запуск"".", НС);
    вывести("Нажмите любую клавишу (q для выхода)", НС);
    цикл начало
        с := "";
        пока естьСимвол() цикл начало
            симв := прочестьСимвол();
            если симв > №20 то с := с ++ симв
            иначе с := с ++ '#' ++ формат("%.2x ", симв);
        конец;
        если с != "" то вывести('>'++с++'<', НС);
        пауза(50);
    конец пока с != "q" && с != "Q";
напоследок
    терминал(1, нет);
окончание.
