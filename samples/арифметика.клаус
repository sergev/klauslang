программа Арифметика;

используется Терминал;

переменные
    а, б, в, кво: целое;
    пример, продолжать: строка;
начало
    вывести("Это тренажёр по устному счёту ;)", НС);
    вывести("Вычислите пример и нажмите ENTER для самопроверки.", НС);
    вывести("Для завершения введите любые символы и нажмите ENTER.", НС, НС);
    цикл начало
        а := случайное(1000);
        б := случайное(100);
        в := случайное(9)+1;
        пример := формат("(%ц + %ц) \ %ц = ", а, б, в);
        след(пример, 0, максЦелое, кво);
        вывести(пример);
        ввести(продолжать);
        подвинутьКурсор(кво, -1);
        вывести((а+б)\в, " остаток ", (а+б)%в, НС, НС);
    конец пока продолжать = "";
окончание.
