программа Арифметика;
переменные
    а, б: целое;
    продолжать: строка;
начало
    цикл начало
        а := случайное(1000);
        б := случайное(100);
        вывести(а, " + ", б, " = ");
        запомнитьКурсор();
        ввести(продолжать);
        вернутьКурсор();
        вывести(а+б, НС, НС);
    конец пока продолжать = "";
окончание.
