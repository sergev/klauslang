программа ОбработкаОшибок;
исключения
    Ош1;
    Ош2 сообщение "Вторая ошибка";
    Ош3 (п1: целое; п2: строка) сообщение "Третья ошибка: %(п1) %(п2)";
переменные
    ош: целое;
начало
    вывести("Какая ошибка (1/2/3)? ");
    начало
        ввести(ош);
        выбор ош из
            1: ошибка Ош1;
            2: ошибка Ош2;
            3: ошибка Ош3(10, "десять");
            иначе вывести("Правильный выбор!", НС);
        конец;
        вывести("Выполнено без ошибок.", НС);
    исключение
        когда Ош1, Ош2 тогда
            ошибка Ош3(0, "") сообщение "Случилась " ++ текст_исключения();
        когда о: Ош3 тогда начало
            о.текст := о.текст ++ " одиннадцать";
            бросить;
        конец;
        когда любая тогда сообщить("Ответ неверный!", НС);
    напоследок
        вывести("Увидимся... ;)", НС);
    конец;
исключение
    сообщить(имя_исключения() ++ ". " ++ текст_исключения(), НС);
    завершить 1;
окончание.
