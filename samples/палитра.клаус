программа Палитра;
переменная
    Ц: целое;
    г, в: целое = 0;
начало
    размерЭкрана(64, 26);
    очиститьЭкран();
    цветШрифта(15);
    для Ц от 0 до 255 цикл начало
        курсор(г, в);
        цветФона(Ц);
        вывести(формат("%4ц", Ц));
        г += 4;
        если г >= 64 то начало
            г := 0;
            в += 1;
        конец;
    конец;
    вывести(НС, НС);
    сброситьАтрибуты();
    вывести("Обычный шрифт", НС);
    стильШрифта(1);
    вывести("Жирный шрифт", НС);
    стильШрифта(2);
    вывести("Курсивный шрифт", НС);
    стильШрифта(1+2);
    вывести("Жирный курсив", НС);
    стильШрифта(4);
    вывести("Подчёркнутый шрифт", НС);
    стильШрифта(8);
    вывести("Перечёркнутый шрифт", НС);
    сброситьАтрибуты();
    вывести(НС, "Нажмите ENTER...");
    ввести();
окончание.
