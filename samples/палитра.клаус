программа Палитра;

используется Терминал;

переменные
    Ц: целое;
    г, в: целые = 0;

начало
    размерЭкрана(64, 27);
    очиститьЭкран();
    цветШрифта(15);
    для Ц от 0 до 255 цикл начало
        курсор(г, в);
        цветФона(Ц);
        вывести(формат("%4ц", Ц));
        г += 4;
        если г >= 64 то начало
            г := 0;
            в += 1;
        конец;
    конец;
    вывести(НС, НС);
    сброситьАтрибуты();
    вывести("Обычный шрифт", НС);
    стильШрифта(стшЖирный);
    вывести("Жирный шрифт", НС);
    стильШрифта(стшКурсив);
    вывести("Курсивный шрифт", НС);
    стильШрифта(стшЖирный | стшКурсив);
    вывести("Жирный курсив", НС);
    стильШрифта(стшПодчерк);
    вывести("Подчёркнутый шрифт", НС);
    стильШрифта(стшЗачерк);
    вывести("Зачёркнутый шрифт", НС);
    сброситьАтрибуты();
    вывести(НС, "Нажмите ENTER...");
    ввести();
окончание.
