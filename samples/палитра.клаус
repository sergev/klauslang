программа Палитра;
переменная
    Ц: целое;
    г, в: целое = 0;
начало
    размерЭкрана(80, 25);
    очиститьЭкран();
    цветШрифта(15);
    для Ц от 0 до 255 цикл начало
        курсор(г, в);
        цветФона(Ц);
        вывести(формат("%4ц", Ц));
        г += 4;
        если г >= 64 то начало
            г := 0;
            в += 1;
        конец;
    конец;
    вывести(НС);
    сброситьАтрибуты();
окончание.
